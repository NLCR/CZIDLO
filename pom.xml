    <artifactId>czidlo</artifactId>
    <version>5.0</version>
    <packaging>pom</packaging>
    <name>CZIDLO</name>
    <description>Application for administration of national librarian URN:NBN registry</description>
    <url>https://github.com/NLCR/CZIDLO/</url>
    <inceptionYear>2011</inceptionYear>
    <organization>
        <name>National Library of the Czech Republic</name>
        <url>http://www.nkp.cz</url>
    </organization>
    <licenses>
        <license>
