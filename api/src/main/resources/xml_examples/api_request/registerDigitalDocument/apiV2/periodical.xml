<!--
    Document   : analytical.xml
    Created on : 22. únor 2012, 11:59
    Author     : Martin Řehánek
    Description:
        Example of valid record to be imported into application urnnbn-resolver-v2
        through its http rest api.
        Intelectual Entity in this example is of type PERIODICAL.
        The type will be used for whole periodical publication. 
        https://github.com/NLCR/CZIDLO
        https://github.com/NLCR/CZIDLO/wiki/API
-->
<r:import xmlns:r="http://resolver.nkp.cz/v2/">
    <!-- periodikum -->
    <r:periodical>
        <r:titleInfo>
            <!-- název (povinný údaj) -->
            <r:title>Rudé právo</r:title>
            <!-- další názvové údaje -->
            <r:subTitle>Ústřední orgán Komunistické strany Československa; pražské vydání</r:subTitle>
        </r:titleInfo>
        <!-- čČNB -->
        <r:ccnb>cnb000431774</r:ccnb>
        <!-- ISSN -->
        <r:issn>0032-6569</r:issn>
        <!-- jiný globální identifikátor periodika -->
        <r:otherId>SICI:TODO</r:otherId>
        <!-- druh dokumentu -->
        <r:documentType>noviny</r:documentType>
        <!-- zda je dokument e-born, defaultně false -->
        <r:digitalBorn>false</r:digitalBorn>
        <!-- hlavní původce (autor/korporace/akce) -->
        <r:primaryOriginator type="CORPORATION">Komunistická strana Československa</r:primaryOriginator>
        <!-- další původce (např. ilustrátor nebo překladatel) -->
        <r:otherOriginator>Jan Ilustrator</r:otherOriginator>
        <!-- informace o publikování -->
        <r:publication>
            <!-- název vydavatele -->
            <r:publisher>Ústřední výbor KSČ</r:publisher>
            <!-- místo vydání -->
            <r:place>Praha</r:place>
        </r:publication>
    </r:periodical>
    <r:digitalDocument>
        <!-- identifikátor archivátora -->
        <r:archiverId>3</r:archiverId>
        <!-- seznam identifikátorů v rámci registrátora 
             typ identifikátoru může obsahovat malé a velké písmena, čísla a znaky "-_:"
             a musí mít celkovou velikost 1-20 znaků
             hodnota identifikátoru může obsahovat malé a velké písmena, čísla a znaky "$-_.+!*'(),:@"
             a musí mít celkovou velikost 1-60 znaků
        -->
        <r:registrarScopeIdentifiers>
            <r:id type="OAI_harvester">1235</r:id>
            <r:id type="signatura">Nov.-0183.065,Praha,Rok:1949-1995</r:id>
            <r:id type="K4_pid">uuid:38bfc69d-1d10-4822-b7a4-c7531bb4aedh</r:id>
        </r:registrarScopeIdentifiers>
        <!-- čím/kým byla digitalizace financována 
             pro novou digitalizaci v rámci NDK zde bude vždy hodnota IOP-NDK
        -->
        <r:financed>norské fondy</r:financed>
        <!-- číslo zakázky, u nové digitalizace se nebude uvádět -->
        <r:contractNumber>123</r:contractNumber>
        <!-- typ a verze formátu -->
        <!-- technická metadata, která se vážou k ARCHIVNÍ verzi
             digitálního dokumentu -->
        <r:technicalMetadata>
            <r:format version="1.0">jpeg</r:format>
            <!-- rozsah (v počtu souborů) -->
            <r:extent>1234 x jpeg2000;1234 x mods-alto;1 x mods</r:extent>
           <!-- rozlišení nastavené na skeneru v dpi-->
            <r:resolution>
                <!-- horizontální -->
                <r:horizontal>1280</r:horizontal>
                <!-- vertikální -->
                <r:vertical>1024</r:vertical>
            </r:resolution>
            <!-- kompresní algoritmus a komprimační poměr -->
            <r:compression ratio="0.3">LZW</r:compression>
            <r:color>
                <!-- barevný model -->
                <r:model>RGB</r:model>
                <!-- bitová hloubka -->
                <r:depth>24</r:depth>
            </r:color>
            <!-- ICC profil -->
            <r:iccProfile>some ICC profile</r:iccProfile>
            <!-- realná velikost obrázků (něktěrého obrázku) v pixelech -->
            <r:pictureSize>
                <r:width>600</r:width>
                <r:height>1000</r:height>
            </r:pictureSize>
        </r:technicalMetadata>
    </r:digitalDocument>
</r:import>
