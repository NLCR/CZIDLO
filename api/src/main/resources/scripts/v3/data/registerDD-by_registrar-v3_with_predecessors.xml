<!--
    Document   : monograph-withUrnNbn.xml
    Created on : 22. únor 2012, 11:59
    Author     : Martin Řehánek
    Description:
        Example of valid record to be imported into application urnnbn-resolver-v2
        through its http rest api.
        Intelectual Entity in this example is of type MONOGRAPH. 
        The type will be used for publications that do not come out periodically 
        and type MONOGRAPH_VOLUME cannot be used.
        This example also contains urn:nbn. It means that when importing this record,
        that particular urn:nbn should be registered. If not possible,
        the import operation must return error.
        http://code.google.com/p/urnnbn-resolver-v2/
        http://code.google.com/p/urnnbn-resolver-v2/wiki/API
-->
<r:import xmlns:r="http://resolver.nkp.cz/v3/">
    <!-- monografie -->
    <r:monograph>
        <r:titleInfo>
            <!-- název (povinný údaj) -->
            <r:title>Babička</r:title>
            <!-- další názvové údaje -->
            <r:subTitle>Obrazy z venkovského života</r:subTitle>
        </r:titleInfo>
        <!-- čČNB -->
        <r:ccnb>cnb002251177</r:ccnb>
        <!-- ISBN -->
        <r:isbn>8090119964</r:isbn>
        <!-- jiný globální identifikátor monografie -->
        <r:otherId>DOI:TODO</r:otherId>
        <!-- druh dokumentu -->
        <r:documentType>kniha</r:documentType>
        <!-- zda je dokument e-born, defaultně false -->
        <r:digitalBorn>false</r:digitalBorn>
        <!-- hlavní původce (autor/korporace/akce) -->
        <r:primaryOriginator type="AUTHOR">Božena Němcová</r:primaryOriginator>
        <!-- další původce (např. ilustrátor nebo překladatel) -->
        <r:otherOriginator>Adolf Kašpar</r:otherOriginator>
        <!-- informace o publikování -->
        <r:publication>
            <!-- název vydavatele -->
            <r:publisher>Československý spisovatel</r:publisher>
            <!-- místo vydání -->
            <r:place>V Praze</r:place>
            <!-- rok vydání -->
            <r:year>2011</r:year>
        </r:publication>
    </r:monograph>
    <r:digitalDocument>
        <!-- identifikátor archivátora -->
        <r:archiverId>3</r:archiverId>
        <!-- předem rezervané urn:nbn -->
        <r:urnNbn>
          <r:value>urn:nbn:cz:tst02-00004e</r:value>
          <r:predecessor value="urn:nbn:cz:tst02-000001"/>
          <r:predecessor value="urn:nbn:cz:tst02-000002" note="test blabla"/> 
        </r:urnNbn>
        <!-- seznam identifikátorů v rámci registrátora -->
       <!-- <r:registrarScopeIdentifiers>
            <r:id type="OAI_harvester">3234</r:id>
            <r:id type="signatura">PK-0123.666</r:id>
            <r:id type="K4_pid">uuid:38bfc69d-1e10-4822-b7a4-c7531bb4aedg</r:id>
        </r:registrarScopeIdentifiers> -->
        <!-- čím/kým byla digitalizace financována 
             pro novou digitalizaci v rámci NDK zde bude vždy hodnota IOP-NDK
        -->
        <r:financed>norské fondy</r:financed>
        <!-- číslo zakázky, u nové digitalizace se nebude uvádět -->
        <r:contractNumber>123</r:contractNumber>
        <!-- technická metadata, která se vážou k ARCHIVNÍ verzi
             digitálního dokumentu -->
        <r:technicalMetadata>
            <!-- typ a verze formátu -->
            <r:format version="1.0">jpeg</r:format>
            <!-- rozsah (v počtu souborů) -->
            <r:extent>245 x jpeg2000;245 x mods-alto;1 x mods</r:extent>
            <!-- rozlišení nastavené na skeneru v dpi-->
            <r:resolution>
                <!-- horizontální -->
                <r:horizontal>1280</r:horizontal>
                <!-- vertikální -->
                <r:vertical>1024</r:vertical>
            </r:resolution>
            <!-- kompresní algoritmus a komprimační poměr -->
            <r:compression ratio="0.3">LZW</r:compression>
            <r:color>
                <!-- barevný model (např. RGB, CMYK)-->
                <r:model>RGB</r:model>
                <!-- bitová hloubka -->
                <r:depth>24</r:depth>
            </r:color>
            <!-- ICC profil -->
            <r:iccProfile>some ICC profile</r:iccProfile>
            <!-- realná velikost obrázků (něktěrého obrázku) v pixelech -->
            <r:pictureSize>
                <r:width>600</r:width>
                <r:height>1000</r:height>
            </r:pictureSize>
        </r:technicalMetadata>
    </r:digitalDocument>
</r:import>

