                    maxOccurs="1">
                    <xs:complexType>
                        <xs:sequence>
                            <xs:element name="title"
                                type="czidlo:nonemptyString" minOccurs="1"
                                maxOccurs="1" />
                            <xs:element name="subTitle" type="xs:string"
                                minOccurs="0" maxOccurs="1" />
                        </xs:sequence>
                    </xs:complexType>
                </xs:element>
                <xs:element name="ccnb" type="xs:string"
                    minOccurs="0" maxOccurs="1" />
                <xs:element name="isbn" type="xs:string"
                    minOccurs="0" maxOccurs="1" />
                <xs:element name="otherId" type="xs:string"
                    minOccurs="0" maxOccurs="1" />
                <xs:element name="documentType" type="xs:string"
                    minOccurs="0" maxOccurs="1" />
                <xs:element name="digitalBorn" type="xs:boolean"
                    minOccurs="0" maxOccurs="1" />
                <xs:element name="primaryOriginator" type="czidlo:primaryOriginator"
                    minOccurs="0" maxOccurs="1" />
                <xs:element name="otherOriginator" type="xs:string"
                    minOccurs="0" maxOccurs="1" />
                <xs:element name="publication" type="czidlo:publication"
                    minOccurs="0" maxOccurs="1" />
            </xs:sequence>
        </xs:complexType>
    </xs:element>

    <!-- digital document -->
    <xs:element name="digitalDocument">
        <xs:complexType>
            <xs:sequence>
                <xs:element name="archiverId" type="xs:long"
                    minOccurs="0" maxOccurs="1" />
                <!-- urn:nbn element -->
                <xs:element name="urnNbn" minOccurs="0">
                    <xs:complexType>
                        <xs:sequence>
                            <xs:element name="value"
                                type="czidlo:urnNbnType" minOccurs="0" />
                            <xs:element name="predecessor"
                                type="czidlo:predecessor" minOccurs="0"
                                maxOccurs="unbounded" />
                        </xs:sequence>
                    </xs:complexType>
                </xs:element>
                <xs:element name="registrarScopeIdentifiers"
                    type="czidlo:registrarScopeIdentifiers" minOccurs="0"
                    maxOccurs="1" />
                <xs:element name="financed" type="xs:string"
                    minOccurs="0" maxOccurs="1" />
                <xs:element name="contractNumber" type="xs:string"
                    minOccurs="0" maxOccurs="1" />
                <xs:element name="technicalMetadata" type="czidlo:technicalMetadata"
                    minOccurs="0" maxOccurs="1" />
            </xs:sequence>
        </xs:complexType>
    </xs:element>

    <xs:simpleType name='nonemptyString'>
        <xs:restriction base='xs:string'>
            <xs:minLength value='1' />
        </xs:restriction>
    </xs:simpleType>

    <!-- urn:nbn -->
    <xs:simpleType name="urnNbnType">
        <xs:restriction base="xs:string">
            <xs:pattern
                value="urn:nbn:[A-Za-z]{2}:[A-Za-z0-9]{2,6}\-[A-Za-z0-9]{6}" />
        </xs:restriction>
    </xs:simpleType>

    <!-- registrar-scope identifiers -->
    <xs:complexType name="registrarScopeIdentifiers">
        <xs:sequence>
            <xs:element name="id"
                type="czidlo:registrarScopeIdentifier" minOccurs="0"
                maxOccurs="unbounded" />
        </xs:sequence>
    </xs:complexType>

    <!-- registrar-scope identifier -->
    <xs:complexType name="registrarScopeIdentifier">
        <xs:simpleContent>
            <xs:extension base="czidlo:registarScopeIdValueType">
                <xs:attribute name="type" use="required"
                    type="czidlo:registarScopeIdTypeType" />
                <xs:attribute name="previousValue" use="optional"
                    type="czidlo:registarScopeIdValueType" />
            </xs:extension>
        </xs:simpleContent>
    </xs:complexType>

    <!-- registrar-scope type -->
    <xs:simpleType name="registarScopeIdTypeType">
        <xs:restriction base="xs:token">
            <!-- uppercase/lowercase letters, numbers, '_', '-', ':'. Must 
                start and end with letter or number. Length must be between 1 and 20 characters. -->
            <xs:pattern
                value="[A-Za-z0-9]{1}[A-Za-z0-9_\-:]{0,18}[A-Za-z0-9]{1}" />
        </xs:restriction>
    </xs:simpleType>

    <!-- registrar-scope value -->
    <xs:simpleType name="registarScopeIdValueType">
        <!-- In API V2 were allowed only these characters: A-Z a-z 0-9 $ 
            - _ . + ! * ' ( ) , : @ -->
        <!-- Now all reserved and unreserved URI characters as specified 
            in RFC 3986 (sections 2.2 and 2.3) are allowed, except for '/'. Must start 
            and end with number letter (capital or not). Leng must be between 1 and 60 
            characters. -->
        <!-- unreserved characters: -->
        <!-- A-Z a-z 0-9 -_.~ -->
        <!-- reserved characters (all except for '/'): -->
        <!-- ! * ' ( ) ; : @ & = + $ , ? # [ ] -->
        <!-- i.e. these characters are newly allowed: ? [ ] ; & = # -->
        <xs:restriction base="xs:token">
            <xs:pattern
                value="[A-Za-z0-9]{1}[A-Za-z0-9\-_\.~!\*'\(\);:@&amp;=+$,\?#\[\]]{0,58}[A-Za-z0-9]{1}|[A-Za-z0-9]{1}" />
        </xs:restriction>
    </xs:simpleType>

    <!-- primary originator -->
    <xs:complexType name="primaryOriginator">
        <xs:simpleContent>
            <xs:extension base="xs:string">
                <xs:attribute name="type" use="required"
                    type="czidlo:originatorTypeType" />
            </xs:extension>
        </xs:simpleContent>
    </xs:complexType>

    <!-- originator type -->
    <xs:simpleType name="originatorTypeType">
        <xs:restriction base="xs:string">
            <xs:enumeration value="AUTHOR" />
            <xs:enumeration value="EVENT" />
            <xs:enumeration value="CORPORATION" />
        </xs:restriction>
    </xs:simpleType>

    <!-- source document -->
    <xs:complexType name="sourceDocument">
        <xs:sequence>
            <xs:element name="titleInfo" minOccurs="1"
                maxOccurs="1">
                <xs:complexType>
                    <xs:sequence>
                        <xs:element name="title" type="xs:string"
                            minOccurs="1" maxOccurs="1" />
                        <xs:element name="volumeTitle" type="xs:string"
                            minOccurs="0" maxOccurs="1" />
                        <xs:element name="issueTitle" type="xs:string"
                            minOccurs="0" maxOccurs="1" />
                    </xs:sequence>
                </xs:complexType>
            </xs:element>
            <xs:element name="ccnb" type="xs:string"
                minOccurs="0" maxOccurs="1" />
            <xs:element name="isbn" type="xs:string"
                minOccurs="0" maxOccurs="1" />
            <xs:element name="issn" type="xs:string"
                minOccurs="0" maxOccurs="1" />
            <xs:element name="otherId" type="xs:string"
                minOccurs="0" maxOccurs="1" />
            <xs:element name="publication" type="czidlo:publication"
                minOccurs="0" maxOccurs="1" />
        </xs:sequence>
    </xs:complexType>

    <!-- publication -->
    <xs:complexType name="publication">
        <xs:sequence>
            <xs:element name="publisher" type="xs:string"
                minOccurs="0" maxOccurs="1" />
            <xs:element name="place" type="xs:string"
                minOccurs="0" maxOccurs="1" />
            <!--TODO: zminit zmenu v dokumentaci. Rok byval xs:int, teď tam 
                muze byt string, ale pokud neobsahuje cislo, zahodi se -->
            <!--TODO: projit ostatni data a pokud najdu podobny int, tak 
                udelat to same -->
            <xs:element name="year" type="xs:string"
                minOccurs="0" maxOccurs="1" />
        </xs:sequence>
    </xs:complexType>

    <!-- url -->
    <xs:simpleType name="url">
        <xs:restriction base="xs:string">
            <!--starts with http:// or https:// (case insensitive) with total 
                length at most 2008 characters -->
            <xs:pattern value="[hH][tT]{2}[pP][sS]{0,1}://.{1,200}" />
        </xs:restriction>
    </xs:simpleType>

    <!-- URN:NBN country code -->
    <xs:simpleType name="countryCode">
        <xs:restriction base="xs:string">
            <xs:pattern value="[A-Za-z]{2}" />
        </xs:restriction>
    </xs:simpleType>

    <!-- URN:NBN registrar code -->
    <xs:simpleType name="registrarCode">
        <xs:restriction base="xs:string">
            <xs:pattern value="[A-Za-z0-9]{2,6}" />
        </xs:restriction>
    </xs:simpleType>

    <!-- URN:NBN document code -->
    <xs:simpleType name="documentCode">
        <xs:restriction base="xs:string">
            <xs:pattern value="[A-Za-z0-9]{6}" />
        </xs:restriction>
    </xs:simpleType>

    <!-- urn:nbn element -->
    <xs:complexType name="urnNbn">
        <xs:sequence>
            <xs:element name="status" minOccurs="0">
                <xs:simpleType>
                    <xs:restriction base="xs:string">
                        <xs:enumeration value="FREE" />
                        <xs:enumeration value="RESERVED" />
                        <xs:enumeration value="ACTIVE" />
                        <xs:enumeration value="DEACTIVATED" />
                    </xs:restriction>
                </xs:simpleType>
            </xs:element>
            <xs:element name="value" type="czidlo:urnNbnType" />
            <xs:element name="countryCode" type="czidlo:countryCode"
                minOccurs="0" />
            <xs:element name="registrarCode" type="czidlo:registrarCode"
                minOccurs="0" />
            <xs:element name="documentCode" type="czidlo:documentCode"
                minOccurs="0" />
            <xs:element name="digitalDocumentId" type="xs:int"
                minOccurs="0" />
            <xs:element name="reserved" type="xs:dateTime"
                minOccurs="0" />
            <xs:element name="registered" type="xs:dateTime"
                minOccurs="0" />
            <xs:element name="deactivated" type="xs:dateTime"
                minOccurs="0" />
            <xs:element name="modified" type="xs:dateTime"
                minOccurs="0" />
            <xs:element name="predecessor" type="czidlo:predecessor"
                minOccurs="0" maxOccurs="unbounded" />
            <xs:element name="successor" type="czidlo:successor"
                minOccurs="0" maxOccurs="unbounded" />
        </xs:sequence>
    </xs:complexType>

    <!--predecessor -->
    <xs:complexType name="predecessor">
        <xs:simpleContent>
            <xs:extension base="xs:string">
                <xs:attribute name="value" type="czidlo:urnNbnType" />
                <xs:attribute name="note" use="optional"
                    type="xs:string" />
            </xs:extension>
        </xs:simpleContent>
    </xs:complexType>

    <!--successor -->
    <xs:complexType name="successor">
        <xs:simpleContent>
            <xs:extension base="xs:string">
                <xs:attribute name="value" type="czidlo:urnNbnType" />
                <xs:attribute name="note" use="optional"
                    type="xs:string" />
            </xs:extension>
        </xs:simpleContent>
    </xs:complexType>

    <!-- technical metadata -->
    <xs:complexType name="technicalMetadata">
        <xs:sequence>
            <xs:element name="format" type="czidlo:format"
                minOccurs="0" maxOccurs="1" />
            <xs:element name="extent" type="xs:string"
                minOccurs="0" maxOccurs="1" />
            <xs:element name="resolution" type="czidlo:resolution"
                minOccurs="0" maxOccurs="1" />
            <xs:element name="compression" type="czidlo:compression"
                minOccurs="0" maxOccurs="1" />
            <xs:element name="color" type="czidlo:color"
                minOccurs="0" maxOccurs="1" />
            <xs:element name="iccProfile" type="xs:string"
                minOccurs="0" maxOccurs="1" />
            <xs:element name="pictureSize" type="czidlo:pictureSize"
                minOccurs="0" maxOccurs="1" />
        </xs:sequence>
    </xs:complexType>

    <!-- format and format version -->
    <xs:complexType name="format">
        <xs:simpleContent>
            <xs:extension base="xs:string">
                <xs:attribute name="version" type="xs:string"
                    use="optional" />
            </xs:extension>
        </xs:simpleContent>
    </xs:complexType>

    <!-- resolution -->
    <xs:complexType name="resolution">
        <xs:sequence>
            <xs:element name="horizontal" type="xs:integer"
                minOccurs="1" maxOccurs="1" />
            <xs:element name="vertical" type="xs:integer"
                minOccurs="1" maxOccurs="1" />
        </xs:sequence>
    </xs:complexType>

    <!-- compression and compression ration -->
    <xs:complexType name="compression">
        <xs:simpleContent>
            <xs:extension base="xs:string">
                <xs:attribute name="ratio" type="xs:double"
                    use="optional" />
            </xs:extension>
        </xs:simpleContent>
    </xs:complexType>

    <!-- color characteristics -->
    <xs:complexType name="color">
        <xs:sequence>
            <xs:element name="model" type="xs:string"
                minOccurs="0" maxOccurs="1" />
            <xs:element name="depth" type="xs:integer"
                minOccurs="0" maxOccurs="1" />
        </xs:sequence>
    </xs:complexType>

    <!-- picture size -->
    <xs:complexType name="pictureSize">
        <xs:sequence>
            <xs:element name="width" type="xs:integer"
                minOccurs="1" maxOccurs="1" />
            <xs:element name="height" type="xs:integer"
                minOccurs="1" maxOccurs="1" />
        </xs:sequence>
    </xs:complexType>

</xs:schema>
