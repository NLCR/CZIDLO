                        </xs:sequence>
                    </xs:complexType>
                </xs:element>
                <xs:element name="ccnb" type="xs:string"
                    minOccurs="0" maxOccurs="1" />
                <xs:element name="isbn" type="xs:string"
                    minOccurs="0" maxOccurs="1" />
                <xs:element name="otherId" type="xs:string"
