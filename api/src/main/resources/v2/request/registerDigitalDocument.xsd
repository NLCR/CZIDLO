<?xml version="1.0" encoding="UTF-8"?>
    <!--
        Document   : registerDigitalDocument.xsd.xml
        Created on : 22. únor 2012, 11:59
        Author     : Martin Řehánek
        Description:
            This XML Schema (W3C) document validates api v2 digital-document-registration operation input data. 
            https://github.com/NLCR/CZIDLO
            https://github.com/NLCR/CZIDLO/wiki/API
    -->
    <xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema" 
    elementFormDefault="qualified" 
    targetNamespace="http://resolver.nkp.cz/v2/" 
    xmlns:czidlo="http://resolver.nkp.cz/v2/"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.w3.org/2001/XMLSchema http://www.w3.org/2001/XMLSchema.xsd">
    <!--    <xs:include schemaLocation="identifiers.xsd"/>-->
        <xs:element name="import">
        <xs:complexType>
            <xs:sequence>
                <xs:choice>
                    <xs:element ref="czidlo:monograph"/>
                    <xs:element ref="czidlo:monographVolume"/>
                    <xs:element ref="czidlo:periodical" />
                    <xs:element ref="czidlo:periodicalVolume"/>
                    <xs:element ref="czidlo:periodicalIssue"/>
                    <xs:element ref="czidlo:analytical"/>
                    <xs:element ref="czidlo:thesis"/>
                    <xs:element ref="czidlo:otherEntity"/>
                </xs:choice>
                <xs:element ref="czidlo:digitalDocument" minOccurs="1" maxOccurs="1"/>
            </xs:sequence>
        </xs:complexType>
    </xs:element>

    <xs:element name="monograph">
        <xs:complexType>
            <xs:sequence>
                <xs:element name="titleInfo" minOccurs="1" maxOccurs="1">
                    <xs:complexType > 
                        <xs:sequence>
                            <xs:element name="title" type="czidlo:titleType" minOccurs="1" maxOccurs="1"/>
                            <xs:element name="subTitle" type="czidlo:subTitleType" minOccurs="0" maxOccurs="1"/>
                        </xs:sequence>
                    </xs:complexType>
                </xs:element>
                <xs:element name="ccnb" type="czidlo:ccnbType" minOccurs="0" maxOccurs="1"/>
                <xs:element name="isbn" type="czidlo:isbnType" minOccurs="0" maxOccurs="1"/>
                <xs:element name="otherId" type="czidlo:otherIdType" minOccurs="0" maxOccurs="1"/>
                <xs:element name="documentType" type="czidlo:documentTypeType" minOccurs="0" maxOccurs="1"/>
                <xs:element name="digitalBorn" type="xs:boolean" minOccurs="0" maxOccurs="1"/>
                <xs:element ref="czidlo:primaryOriginator" minOccurs="0" maxOccurs="1"/>
                <xs:element name="otherOriginator" type="czidlo:otherOriginatorType" minOccurs="0" maxOccurs="1"/>
                <xs:element ref="czidlo:publication" minOccurs="0" maxOccurs="1"/>
            </xs:sequence>
        </xs:complexType>
    </xs:element>
    
    <xs:element name="monographVolume">
        <xs:complexType>
            <xs:sequence>
                <xs:element name="titleInfo" minOccurs="1" maxOccurs="1">
                    <xs:complexType > 
                        <xs:sequence>
                            <xs:element name="monographTitle" type="czidlo:titleType" minOccurs="1" maxOccurs="1"/>
                            <xs:element name="volumeTitle" type="czidlo:volumeTitleType" minOccurs="1" maxOccurs="1"/>
                        </xs:sequence>
                    </xs:complexType>
                </xs:element>
                <xs:element name="ccnb" type="czidlo:ccnbType" minOccurs="0" maxOccurs="1"/>
                <xs:element name="isbn" type="czidlo:isbnType" minOccurs="0" maxOccurs="1"/>
                <xs:element name="otherId" type="czidlo:otherIdType" minOccurs="0" maxOccurs="1"/>
                <xs:element name="documentType" type="czidlo:documentTypeType" minOccurs="0" maxOccurs="1"/>
                <xs:element name="digitalBorn" type="xs:boolean" minOccurs="0" maxOccurs="1"/>
                <xs:element ref="czidlo:primaryOriginator" minOccurs="0" maxOccurs="1"/>
                <xs:element name="otherOriginator" type="czidlo:otherOriginatorType" minOccurs="0" maxOccurs="1"/>
                <xs:element ref="czidlo:publication" minOccurs="0" maxOccurs="1"/>
            </xs:sequence>
        </xs:complexType>
    </xs:element>
    
    <xs:element name="periodical">
        <xs:complexType>
            <xs:sequence>
                <xs:element name="titleInfo" minOccurs="1" maxOccurs="1">
                    <xs:complexType > 
                        <xs:sequence>
                            <xs:element name="title" type="czidlo:titleType" minOccurs="1" maxOccurs="1"/>
                            <xs:element name="subTitle" type="czidlo:subTitleType" minOccurs="0" maxOccurs="1"/>
                        </xs:sequence>
                    </xs:complexType>
                </xs:element>
                <xs:element name="ccnb" type="czidlo:ccnbType" minOccurs="0" maxOccurs="1"/>
                <xs:element name="issn" type="czidlo:issnType" minOccurs="0" maxOccurs="1"/>
                <xs:element name="otherId" type="czidlo:otherIdType" minOccurs="0" maxOccurs="1"/>
                <xs:element name="documentType" type="czidlo:documentTypeType" minOccurs="0" maxOccurs="1"/>
                <xs:element name="digitalBorn" type="xs:boolean" minOccurs="0" maxOccurs="1"/>
                <xs:element ref="czidlo:primaryOriginator" minOccurs="0" maxOccurs="1"/>
                <xs:element name="otherOriginator" type="czidlo:otherOriginatorType" minOccurs="0" maxOccurs="1"/>
                <xs:element ref="czidlo:publication" minOccurs="0" maxOccurs="1"/>
            </xs:sequence>
        </xs:complexType>
    </xs:element>
    
    <xs:element name="periodicalVolume">
        <xs:complexType>
            <xs:sequence>
                <xs:element name="titleInfo" minOccurs="1" maxOccurs="1">
                    <xs:complexType > 
                        <xs:sequence>
                            <xs:element name="periodicalTitle" type="czidlo:titleType" minOccurs="1" maxOccurs="1"/>
                            <xs:element name="volumeTitle" type="czidlo:volumeTitleType" minOccurs="1" maxOccurs="1"/>
                        </xs:sequence>
                    </xs:complexType>
                </xs:element>
                <xs:element name="ccnb" type="czidlo:ccnbType" minOccurs="0" maxOccurs="1"/>
                <xs:element name="issn" type="czidlo:issnType" minOccurs="0" maxOccurs="1"/>
                <xs:element name="otherId" type="czidlo:otherIdType" minOccurs="0" maxOccurs="1"/>
                <xs:element name="documentType" type="czidlo:documentTypeType" minOccurs="0" maxOccurs="1"/>
                <xs:element name="digitalBorn" type="xs:boolean" minOccurs="0" maxOccurs="1"/>
                <xs:element ref="czidlo:primaryOriginator" minOccurs="0" maxOccurs="1"/>
                <xs:element name="otherOriginator" type="czidlo:otherOriginatorType" minOccurs="0" maxOccurs="1"/>
                <xs:element ref="czidlo:publication" minOccurs="0" maxOccurs="1"/>
            </xs:sequence>
        </xs:complexType>
    </xs:element>
    
    <xs:element name="periodicalIssue">
        <xs:complexType>
            <xs:sequence>
                <xs:element name="titleInfo" minOccurs="1" maxOccurs="1">
                    <xs:complexType > 
                        <xs:sequence>
                            <xs:element name="periodicalTitle" type="czidlo:titleType" minOccurs="1" maxOccurs="1"/>
                            <xs:element name="volumeTitle" type="czidlo:volumeTitleType" minOccurs="0" maxOccurs="1"/>
                            <xs:element name="issueTitle" type="czidlo:issueTitleType" minOccurs="1" maxOccurs="1"/>
                        </xs:sequence>
                    </xs:complexType>
                </xs:element>
                <xs:element name="ccnb" type="czidlo:ccnbType" minOccurs="0" maxOccurs="1"/>
                <xs:element name="issn" type="czidlo:issnType" minOccurs="0" maxOccurs="1"/>
                <xs:element name="otherId" type="czidlo:otherIdType" minOccurs="0" maxOccurs="1"/>
                <xs:element name="documentType" type="czidlo:documentTypeType" minOccurs="0" maxOccurs="1"/>
                <xs:element name="digitalBorn" type="xs:boolean" minOccurs="0" maxOccurs="1"/>
                <xs:element ref="czidlo:primaryOriginator" minOccurs="0" maxOccurs="1"/>
                <xs:element name="otherOriginator" type="czidlo:otherOriginatorType" minOccurs="0" maxOccurs="1"/>
                <xs:element ref="czidlo:publication" minOccurs="0" maxOccurs="1"/>
            </xs:sequence>
        </xs:complexType>
    </xs:element>
    
    <xs:element name="analytical">
        <xs:complexType>
            <xs:sequence>
                <xs:element name="titleInfo" minOccurs="1" maxOccurs="1">
                    <xs:complexType > 
                        <xs:sequence>
                            <xs:element name="title" type="czidlo:titleType" minOccurs="1" maxOccurs="1"/>
                            <xs:element name="subTitle" type="czidlo:subTitleType" minOccurs="0" maxOccurs="1"/>
                        </xs:sequence>
                    </xs:complexType>
                </xs:element>
                <xs:element name="otherId" type="czidlo:otherIdType" minOccurs="0" maxOccurs="1"/>
                <xs:element name="documentType" type="czidlo:documentTypeType" minOccurs="0" maxOccurs="1"/>
                <xs:element ref="czidlo:primaryOriginator" minOccurs="0" maxOccurs="1"/>
                <xs:element name="otherOriginator" type="czidlo:otherOriginatorType" minOccurs="0" maxOccurs="1"/>
                <xs:element ref="czidlo:sourceDocument" minOccurs="1" maxOccurs="1"/>
            </xs:sequence>
        </xs:complexType>
    </xs:element>
    
    <xs:element name="thesis">
        <xs:complexType>
            <xs:sequence>
                <xs:element name="titleInfo" minOccurs="1" maxOccurs="1">
                    <xs:complexType > 
                        <xs:sequence>
                            <xs:element name="title" type="czidlo:titleType" minOccurs="1" maxOccurs="1"/>
                            <xs:element name="subTitle" type="czidlo:subTitleType" minOccurs="0" maxOccurs="1"/>
                        </xs:sequence>
                    </xs:complexType>
                </xs:element>
                <xs:element name="ccnb" type="czidlo:ccnbType" minOccurs="0" maxOccurs="1"/>
                <xs:element name="otherId" type="czidlo:otherIdType" minOccurs="0" maxOccurs="1"/>
                <xs:element name="documentType" type="czidlo:documentTypeType" minOccurs="0" maxOccurs="1"/>
                <xs:element name="digitalBorn" type="xs:boolean" minOccurs="0" maxOccurs="1"/>
                <xs:element ref="czidlo:primaryOriginator" minOccurs="0" maxOccurs="1"/>
                <xs:element name="otherOriginator" type="czidlo:otherOriginatorType" minOccurs="0" maxOccurs="1"/>
                <xs:element ref="czidlo:publication" minOccurs="0" maxOccurs="1"/>
                <xs:element name="degreeAwardingInstitution" type="czidlo:degreeAwardingInstitutionType" minOccurs="0" maxOccurs="1"/>
            </xs:sequence>
        </xs:complexType>
    </xs:element>
    
    <xs:element name="otherEntity">
        <xs:complexType>
            <xs:sequence>
                <xs:element name="titleInfo" minOccurs="1" maxOccurs="1">
                    <xs:complexType > 
                        <xs:sequence>
                            <xs:element name="title" type="czidlo:titleType" minOccurs="1" maxOccurs="1"/>
                            <xs:element name="subTitle" type="czidlo:subTitleType" minOccurs="0" maxOccurs="1"/>
                        </xs:sequence>
                    </xs:complexType>
                </xs:element>
                <xs:element name="ccnb" type="czidlo:ccnbType" minOccurs="0" maxOccurs="1"/>
                <xs:element name="isbn" type="czidlo:isbnType" minOccurs="0" maxOccurs="1"/>
                <xs:element name="otherId" type="czidlo:otherIdType" minOccurs="0" maxOccurs="1"/>
                <xs:element name="documentType" type="czidlo:documentTypeType" minOccurs="0" maxOccurs="1"/>
                <xs:element name="digitalBorn" type="xs:boolean" minOccurs="0" maxOccurs="1"/>
                <xs:element ref="czidlo:primaryOriginator" minOccurs="0" maxOccurs="1"/>
                <xs:element name="otherOriginator" type="czidlo:otherOriginatorType" minOccurs="0" maxOccurs="1"/>
                <xs:element ref="czidlo:publication" minOccurs="0" maxOccurs="1"/>
            </xs:sequence>
        </xs:complexType>
    </xs:element>

    <!-- title -->
    <xs:simpleType name="titleType">
        <xs:restriction base="xs:string">
            <xs:minLength value="1"/>
<!--            <xs:maxLength value="100"/>-->
        </xs:restriction>
    </xs:simpleType>
    
    <!-- subTitle -->
    <xs:simpleType name="subTitleType">
        <xs:restriction base="xs:string">
            <xs:minLength value="1"/>
            <!--<xs:maxLength value="200"/>-->
        </xs:restriction>
    </xs:simpleType>
    
    <!-- volume title -->
    <xs:simpleType name="volumeTitleType">
        <xs:restriction base="xs:string">
            <xs:minLength value="1"/>
            <!--<xs:maxLength value="50"/>-->
        </xs:restriction>
    </xs:simpleType>
    
    <!-- issue title -->
    <xs:simpleType name="issueTitleType">
        <xs:restriction base="xs:string">
            <xs:minLength value="1"/>
            <!--<xs:maxLength value="50"/>-->
        </xs:restriction>
    </xs:simpleType>
    

    <!-- other intelectual entity attributes -->    
    
    <!-- type of document -->
    <xs:simpleType name="documentTypeType">
        <xs:restriction base="xs:string">
            <xs:minLength value="1"/>
            <!--<xs:maxLength value="50"/>-->
        </xs:restriction>
    </xs:simpleType>

    <!-- other originator (illustrator, translator) -->
    <xs:simpleType name="otherOriginatorType">
        <xs:restriction base="xs:string">
            <xs:minLength value="1"/>
            <!--<xs:maxLength value="50"/>-->
        </xs:restriction>
    </xs:simpleType>

    
    <!-- degree awarding institution -->
    <xs:simpleType name="degreeAwardingInstitutionType">
        <xs:restriction base="xs:string">
            <xs:minLength value="1"/>
            <!--<xs:maxLength value="50"/>-->
        </xs:restriction>
    </xs:simpleType>
    
    <!-- originator -->
    <xs:element name="primaryOriginator">
        <xs:complexType>
            <xs:simpleContent>
                <xs:extension base="xs:string">
                    <xs:attribute name="type" use="required" type="czidlo:originatorTypeType"/>
                </xs:extension>
            </xs:simpleContent>
        </xs:complexType>
    </xs:element>
    <!-- originator type -->
    <xs:simpleType name="originatorTypeType">
        <xs:restriction base="xs:string">
            <xs:enumeration value="AUTHOR"/>
            <xs:enumeration value="EVENT"/>
            <xs:enumeration value="CORPORATION"/>
        </xs:restriction>
    </xs:simpleType>
    
    <!-- publication -->
    <xs:element name="publication">
        <xs:complexType>
            <xs:sequence>
                <xs:element name="publisher" type="czidlo:publisherType" minOccurs="0" maxOccurs="1"/>
                <xs:element name="place" type="czidlo:placeType" minOccurs="0" maxOccurs="1"/>
                <xs:element name="year" type="xs:integer" minOccurs="0" maxOccurs="1"/>
            </xs:sequence>
        </xs:complexType>
    </xs:element>
    
    <!-- publisher -->
    <xs:simpleType name="publisherType">
        <xs:restriction base="xs:string">
            <xs:minLength value="1"/>
            <!--<xs:maxLength value="50"/>-->
        </xs:restriction>
    </xs:simpleType>
    
    <!-- place -->
    <xs:simpleType name="placeType">
        <xs:restriction base="xs:string">
            <xs:minLength value="1"/>
            <!--<xs:maxLength value="50"/>-->
        </xs:restriction>
    </xs:simpleType>
    
    <!-- source document -->
    <xs:element name="sourceDocument">
        <xs:complexType>
            <xs:sequence>
                <xs:element name="titleInfo" minOccurs="1" maxOccurs="1">
                    <xs:complexType > 
                        <xs:sequence>
                            <xs:element name="title" type="czidlo:titleType" minOccurs="1" maxOccurs="1"/>
                            <xs:element name="volumeTitle" type="czidlo:volumeTitleType" minOccurs="0" maxOccurs="1"/>
                            <xs:element name="issueTitle" type="czidlo:issueTitleType" minOccurs="0" maxOccurs="1"/>
                        </xs:sequence>
                    </xs:complexType>
                </xs:element>
                <xs:element name="ccnb" type="czidlo:ccnbType" minOccurs="0" maxOccurs="1"/>
                <xs:element name="isbn" type="czidlo:isbnType" minOccurs="0" maxOccurs="1"/>
                <xs:element name="issn" type="czidlo:issnType" minOccurs="0" maxOccurs="1"/>
                <xs:element name="otherId" type="czidlo:otherIdType" minOccurs="0" maxOccurs="1"/>
                <xs:element ref="czidlo:publication" minOccurs="0" maxOccurs="1"/>
            </xs:sequence>
        </xs:complexType>
    </xs:element>
    
    <xs:simpleType name="otherIdType">
        <xs:restriction base="xs:string">
            <xs:minLength value="1"/>
            <!--<xs:maxLength value="50"/>-->
        </xs:restriction>
    </xs:simpleType>
    
    <xs:element name="digitalDocument">
        <xs:complexType>
            <xs:sequence>
                <xs:element name="archiverId" type="xs:long" minOccurs="0" maxOccurs="1"/>
                <xs:element name="urnNbn" type="czidlo:urnNbnType" minOccurs="0" maxOccurs="1"/>
                <xs:element ref="czidlo:registrarScopeIdentifiers" minOccurs="0" maxOccurs="1" />
                <xs:element name="financed" type="czidlo:financedType" minOccurs="0" maxOccurs="1"/>
                <xs:element name="contractNumber" type="xs:string" minOccurs="0" maxOccurs="1"/>
                <xs:element ref="czidlo:technicalMetadata" minOccurs="1" maxOccurs="1"/>
            </xs:sequence>
        </xs:complexType>
    </xs:element>
    
    <!-- urn:nbn -->
    <xs:simpleType name="urnNbnType">
        <xs:restriction base="xs:string">
            <!-- TODO: here hardcoced "CZ" -->
            <xs:pattern value="urn:nbn:cz:[A-Za-z0-9]{2,6}\-[A-Za-z0-9]{6}"/>
        </xs:restriction>
    </xs:simpleType>
    
    <!-- registrar scope identifiers -->
    <xs:element name="registrarScopeIdentifiers">
        <xs:complexType >
            <xs:sequence>
                <xs:element name="id" type="czidlo:registrarScopeIdentifierType" minOccurs="0" maxOccurs="unbounded"/>
            </xs:sequence>
        </xs:complexType>
    </xs:element> 
    
    <!-- registrar scope identifier and type -->
    <xs:complexType name="registrarScopeIdentifierType">
        <xs:simpleContent>
            <xs:extension base="czidlo:registarScopeIdValueType">
                <xs:attribute name="type" use="required" type="czidlo:registarScopeIdTypeType"/>
            </xs:extension>
        </xs:simpleContent>
    </xs:complexType>
    <!-- identifier value -->
    <xs:simpleType name="registarScopeIdValueType">
        <xs:restriction base="xs:string">
            <!-- $ - _ . + ! * ' ( ) , : @ -->
            <xs:pattern value="[A-Za-z0-9$\-_\.+!\*'\(\),:@]{1,60}"/>
        </xs:restriction>
    </xs:simpleType>
    <!-- identifier type -->
    <xs:simpleType name="registarScopeIdTypeType">
        <xs:restriction base="xs:token">
            <xs:pattern value="[A-Za-z0-9_\-:]{2,20}"/>
        </xs:restriction>
    </xs:simpleType>
    
    <!-- financed -->
    <xs:simpleType name="financedType">
        <xs:restriction base="xs:string">
            <xs:minLength value="1"/>
            <!--<xs:maxLength value="100"/>-->
        </xs:restriction>
    </xs:simpleType>
    
    
    <!-- technical metadata -->
    <xs:element name="technicalMetadata">
        <xs:complexType>
            <xs:sequence>
                <xs:element ref="czidlo:format" minOccurs="0" maxOccurs="1"/>
                <xs:element ref="czidlo:extent" minOccurs="0" maxOccurs="1"/>
                <xs:element ref="czidlo:resolution" minOccurs="0" maxOccurs="1"/>
                <xs:element ref="czidlo:compression" minOccurs="0" maxOccurs="1"/>
                <xs:element ref="czidlo:color" minOccurs="0" maxOccurs="1"/>
                <xs:element name="iccProfile" type="czidlo:iccProfileType" minOccurs="0" maxOccurs="1"/>
                <xs:element ref="czidlo:pictureSize" minOccurs="0" maxOccurs="1"/>
            </xs:sequence>
        </xs:complexType>
    </xs:element>
    
    <!-- format and format version -->
    <xs:element name="format">
        <xs:complexType>
            <xs:simpleContent>
                <xs:extension base="czidlo:formatType">
                    <xs:attribute name="version" type="czidlo:formatVersionType" use="optional"/>
                </xs:extension>
            </xs:simpleContent>
        </xs:complexType>
    </xs:element>
    <!-- format -->
    <xs:simpleType name="formatType">
        <xs:restriction base="xs:string">
            <xs:minLength value="1"/>
            <!--<xs:maxLength value="20"/>-->
        </xs:restriction>
    </xs:simpleType>
    <!-- format version -->
    <xs:simpleType name="formatVersionType">
        <xs:restriction base="xs:string">
            <xs:minLength value="1"/>
            <!--<xs:maxLength value="10"/>-->
        </xs:restriction>
    </xs:simpleType>
    
    <!-- extent -->
    <xs:element name="extent">
        <xs:simpleType>
            <xs:restriction base="xs:string">
                <xs:minLength value="1"/>
                <!--<xs:maxLength value="200"/>-->
            </xs:restriction>
        </xs:simpleType>
    </xs:element>
    
    <!-- resolution -->
    <xs:element name="resolution">
        <xs:complexType>
            <xs:sequence>
                <xs:element name="horizontal" type="xs:integer" minOccurs="1" maxOccurs="1"/>
                <xs:element name="vertical" type="xs:integer" minOccurs="1" maxOccurs="1"/>
            </xs:sequence>
        </xs:complexType>
    </xs:element>
    
    <!-- compression and compression ration -->
    <xs:element name="compression">
        <xs:complexType>
            <xs:simpleContent>
                <xs:extension base="czidlo:compressionType">
                    <xs:attribute name="ratio" type="xs:double" use="optional"/>
                </xs:extension>
            </xs:simpleContent>
        </xs:complexType>
    </xs:element>
    <!-- compression -->
    <xs:simpleType name="compressionType">
        <xs:restriction base="xs:string">
            <xs:minLength value="1"/>
            <!--<xs:maxLength value="50"/>-->
        </xs:restriction>
    </xs:simpleType>
    
    <!-- color characteristics -->
    <xs:element name="color">
        <xs:complexType>
            <xs:sequence>
                <xs:element name="model" type="czidlo:modelType" minOccurs="0" maxOccurs="1"/>
                <xs:element name="depth" type="xs:integer" minOccurs="0" maxOccurs="1"/>
            </xs:sequence>
        </xs:complexType>
    </xs:element>
    <!-- color model -->
    <xs:simpleType name="modelType">
        <xs:restriction base="xs:string">
            <xs:minLength value="1"/>
            <!--<xs:maxLength value="20"/>-->
        </xs:restriction>
    </xs:simpleType>
    
    
    <!-- icc profile -->
    <xs:simpleType name="iccProfileType">
        <xs:restriction base="xs:string">
            <xs:minLength value="1"/>
            <!--<xs:maxLength value="50"/>-->
        </xs:restriction>
    </xs:simpleType>
    
    <!-- picture seize -->
    <xs:element name="pictureSize">
        <xs:complexType>
            <xs:sequence>
                <xs:element name="width" type="xs:integer" minOccurs="1" maxOccurs="1"/>
                <xs:element name="height" type="xs:integer" minOccurs="1" maxOccurs="1"/>
            </xs:sequence>
        </xs:complexType>
    </xs:element>

        <xs:element name="identifiers">
            <xs:complexType>
                <xs:sequence>
                    <xs:element name="isbn" type="czidlo:isbnType" minOccurs="0" maxOccurs="unbounded"/>
                    <xs:element name="ccnb" type="czidlo:ccnbType" minOccurs="0" maxOccurs="unbounded"/>
                    <xs:element name="issn" type="czidlo:issnType" minOccurs="0" maxOccurs="unbounded"/>
                </xs:sequence>
            </xs:complexType>
        </xs:element>

    <!-- 
    ISBN
    ====
    Akceptovány jsou jen československé isbn (prefix 80). Pokud se jedná o isbn-13,
    tak musí jít o knihovní isbn (prefix 978). 
    Platnost kontrolního součtu v posledním znaku se zde nekontroluje.
    Vyrobeno za pomocí dokumentu http://www.xfront.com/isbn.xsd

    isbn-10/13 bez oddělovačů
    (978){0,1}80\d([0-9]|){6}\d[0-9xX]
    např.:
    8090119964
    9788090119963
    809011996x
    809011996X
    978809011996x
    978809011996X

    isbn-10/13 s pomlčkama
    (978-){0,1}80-\d([0-9]|-){6}\d-[0-9xX]
    např.:
    80-9-01199-64
    978-80-901199-6-3
    80-7178-463-x
    80-7178-463-X
    978-80-7178-463-x
    978-80-7178-463-X

    isbn-10/13 s mezerama
    (978\s){0,1}80\s\d([0-9]|\s){6}\d\s[0-9xX]
    např.:
    80 9 01199 64
    978 80 901199 6 3
    80 7178 463 x
    80 7178 463 X
    978 80 7178 463 x
    978 80 7178 463 X

    isbn-13 s pomlčkou před kódem 978 a jinak bez oddělovačů
    978-80\d([0-9]|){6}\d[0-9xX]
    např.:
    978-8090119964
    978-807178463x
    978-807178463X

    celkem:
    (978){0,1}80\d([0-9]|){6}\d[0-9xX]|(978-){0,1}80-\d([0-9]|-){6}\d-[0-9xX]|(978\s){0,1}80\s\d([0-9]|\s){6}\d\s[0-9xX]|978-80\d([0-9]|){6}\d[0-9xX]
    -->
        <xs:simpleType name="isbnType">
            <xs:restriction base="xs:string">
                <xs:pattern 
value="(978){0,1}80\d([0-9]|){6}\d[0-9xX]|(978-){0,1}80-\d([0-9]|-){6}\d-[0-9xX]|(978\s){0,1}80\s\d([0-9]|\s){6}\d\s[0-9xX]|978-80\d([0-9]|){6}\d[0-9xX]"/>
            </xs:restriction>
        </xs:simpleType>

    <!-- 
    čČNB
    ====
    Skládá se z prefixu "cnb" případně "CNB" a dále 9 číslic.

    např.:
    cnb123456789
    CNB123456789
    -->
        <xs:simpleType name="ccnbType">
            <xs:restriction base="xs:string">
                <xs:pattern value="cnb\d{9}|CNB\d{9}"/>
            </xs:restriction>
        </xs:simpleType>

    <!-- 
    ISSN
    ====
    Skládá se z dvou skupin čtyř znaků oddělených pomlčkou.
    Všechny znaky musí být číslice, jen poslední může nabývat hodnotu 'X', případně 'x'. 
    Poslední znak je kontrolním součtem. Stejně jako u ISBN se ani zde nekontroluje,
    jestli je kontrolní součet platný.

    např.:
    1234-5678
    1234-567x
    1234-567X
    -->
    <xs:simpleType name="issnType">
        <xs:restriction base="xs:string">
            <xs:pattern value="\d{4}-\d{3}[0-9Xx]{1}"/>
        </xs:restriction>
    </xs:simpleType>
</xs:schema>

