<?xml version="1.0" encoding="UTF-8"?>
<!--
    Document   : analytical.xml
    Created on : 22. únor 2012, 11:59
    Author     : Martin Řehánek
    Description:
        Example of valid record to be imported into application urnnbn-resolver-v2
        through its http rest api.
        Intelectual Entity in this example is of type MONOGRAPH_VOLUME. 
        The type will be used for publications that do not come out periodically
        (monographs) but are physically (and/or logically) separated into multiple volumes.
        MONOGRAPH_VOLUME represents one such volume, not the whole aggregate!
        Typical case is multivolume dictionary.
        http://code.google.com/p/urnnbn-resolver-v2/
        http://code.google.com/p/urnnbn-resolver-v2/wiki/API
-->
<r:import xmlns:r="http://resolver.nkp.cz/v2/">
    <r:monographVolume>
        <r:titleInfo>
            <!-- název celé monografie (povinný údaj) -->
            <r:monographTitle>Slovník naučný</r:monographTitle>
            <!-- název svazku (povinný údaj) -->
            <r:volumeTitle>D. 8.,S-Szyttler</r:volumeTitle>
        </r:titleInfo>
        <!-- čČNB svazku. Pokud pro svazek neexistuje, potom čČNB celé monografie -->
        <r:ccnb>cnb000000000</r:ccnb>
        <!-- ISBN svazku -->
        <r:isbn>8090119964</r:isbn>
        <!-- jiný globální identifikátor svazku, případně celé monografie -->
        <r:otherId>DOI:TODO</r:otherId>
        <!-- druh dokumentu -->
        <r:documentType>slovník</r:documentType>
        <!-- zda je dokument e-born, defaultně false -->
        <r:digitalBorn>false</r:digitalBorn>
        <!-- hlavní původce (autor/korporace/akce) -->
        <r:primaryOriginator type="AUTHOR">Rieger, František Vladislav</r:primaryOriginator>
        <!-- další původce (např. ilustrátor nebo překladatel) -->
        <r:otherOriginator>Jan Ilustrator</r:otherOriginator>
        <!-- informace o publikování -->
        <r:publication>
            <!-- název vydavatele -->
            <r:publisher>I. L. Kober</r:publisher>
            <!-- místo vydání -->
            <r:place>V Praze</r:place>
            <!-- rok vydání -->
            <r:year>1870</r:year>
        </r:publication>
    </r:monographVolume>
    <r:digitalDocument>
        <!-- identifikátor archivátora -->
        <r:archiverId>3</r:archiverId>
        <!-- seznam identifikátorů v rámci registrátora -->
        <r:registrarScopeIdentifiers>
            <r:id type="signatura">MP-0001.308,8</r:id>
            <r:id type="K4_pid">uuid:38bfc69d-1d10-4822-b7a4-c7531bb4aedx</r:id>
        </r:registrarScopeIdentifiers>
        <!-- čím/kým byla digitalizace financována 
             pro novou digitalizaci v rámci NDK zde bude vždy hodnota IOP-NDK
        -->
        <r:financed>norské fondy</r:financed>
        <!-- číslo zakázky, u nové digitalizace se nebude uvádět -->
        <r:contractNumber>123</r:contractNumber>
        <!-- technická metadata, která se vážou k ARCHIVNÍ verzi
             digitálního dokumentu -->
        <r:technicalMetadata>
            <!-- typ a verze formátu -->
            <r:format version="1.0">jpeg</r:format>
            <!-- rozsah (v počtu souborů) -->
            <r:extent>1218 x jpeg2000;1218 x mods-alto;1 x mods</r:extent>
            <!-- rozlišení nastavené na skeneru v dpi-->
            <r:resolution>
                <!-- horizontální -->
                <r:horizontal>1280</r:horizontal>
                <!-- vertikální -->
                <r:vertical>1024</r:vertical>
            </r:resolution>
            <!-- kompresní algoritmus a komprimační poměr -->
            <r:compression ratio="0.3">LZW</r:compression>
            <r:color>
            <!-- barevný model (např. RGB, CMYK)-->
                <r:model>RGB</r:model>
            <!-- bitová hloubka -->
                <r:depth>24</r:depth>
            </r:color>
            <!-- ICC profil -->
            <r:iccProfile>some ICC profile</r:iccProfile>
            <!-- realná velikost obrázků (něktěrého obrázku) v pixelech -->
            <r:pictureSize>
                <r:width>600</r:width>
                <r:height>1000</r:height>
            </r:pictureSize>
        </r:technicalMetadata>
    </r:digitalDocument>
</r:import>
