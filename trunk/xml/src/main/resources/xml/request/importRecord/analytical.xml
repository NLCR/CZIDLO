<?xml version="1.0" encoding="UTF-8"?>
<!--
    Document   : analytical.xml
    Created on : 22. únor 2012, 11:59
    Author     : Martin Řehánek
    Description:
        Example of valid record to be imported into application urnnbn-resolver-v2
        through its http rest api.
        Intelectual Entity in this example is of type ANALYTICAL. 
        The type will be used mainly for articles but possibly for chapters
        or other parts of physical documents.
        http://code.google.com/p/urnnbn-resolver-v2/
        http://code.google.com/p/urnnbn-resolver-v2/wiki/API
-->
<r:import xmlns:r="http://resolver.nkp.cz/v2/">
    <!-- analytikum (např. článek) -->
    <r:analytical>
        <r:titleInfo>
            <!-- název -->
            <r:title>O slavných hudebnících</r:title>
            <!-- další názvové údaje -->
            <r:subTitle>Mozart v ústním podání; Mozart, W. A.</r:subTitle>
        </r:titleInfo>
        <!-- jiný globální identifikátor analytika -->
        <r:otherId>EAN:9770862592005</r:otherId>
        <!-- druh dokumentu -->
        <r:documentType>novinový článek</r:documentType>
        <!-- hlavní původce (autor/korporace/akce) -->
        <r:primaryOriginator type="AUTHOR">C</r:primaryOriginator>
        <!-- další původce (např. ilustrátor nebo překladatel) -->
        <r:otherOriginator>Jan Ilustrator</r:otherOriginator>
        <!-- informace o zdrojovém dokumentu. v tomto případě se jedná o výtisk periodika -->
        <r:sourceDocument>
            <r:titleInfo>
                <r:title>Lidové novin</r:title>
                <r:volumeTitle>ročník 1949</r:volumeTitle>
                <r:issueTitle>10.1.1941</r:issueTitle>
            </r:titleInfo>
            <r:ccnb>cnb001282114</r:ccnb>
            <!-- protože je zdrojovým dokumentem periodikum, je zde issn.
                 V jiných případech (článek z monografie) by zde mohlo isbn
            -->
            <!-- <r:isbn/> -->
            <r:issn>1802-6265</r:issn>
            <r:otherId>ISBN2:0862-5921</r:otherId>
            <r:publication>
                <r:publisher>Pavel Váša a František Šelepa</r:publisher>
                <r:place>Brno</r:place>
                <r:year>1941</r:year>
            </r:publication>
        </r:sourceDocument>
    </r:analytical>
    <r:digitalDocument>
        <!-- identifikátor archivátora -->
        <r:archiverId>3</r:archiverId>
        <!-- seznam identifikátorů v rámci registrátora -->
        <r:registrarScopeIdentifiers>
            <r:id type="OAI_harvester">1238</r:id>
            <r:id type="K4_pid">uuid:38bfc69d-1d10-4822-b7a4-c7531bb4aedk</r:id>
        </r:registrarScopeIdentifiers>
        <!-- čím/kým byla digitalizace financována -->
        <r:financed>norské fondy</r:financed>
        <!-- číslo zakázky, u nové digitalizace se nebude uvádět -->
        <r:contractNumber>123</r:contractNumber>
        <!-- technická metadata, která se vážou k ARCHIVNÍ verzi
             digitálního dokumentu -->
        <r:technicalMetadata>
            <!-- typ a verze formátu -->
            <r:format version="1.0">jpeg</r:format>
            <!-- rozsah (počet souborů) -->
            <r:extent>1</r:extent>
            <!-- rozlišení nastavené na skeneru v dpi-->
            <r:resolution>
                <!-- horizontální -->
                <r:horizontal>1280</r:horizontal>
                <!-- vertikální -->
                <r:vertical>1024</r:vertical>
            </r:resolution>
            <!-- kompresní algoritmus a komprimační poměr -->
            <r:compression ratio="0.3">LZW</r:compression>
            <r:color>
            <!-- barevný model -->
                <r:model>RGB</r:model>
            <!-- bitová hloubka -->
                <r:depth>24</r:depth>
            </r:color>
            <!-- ICC profil -->
            <r:iccProfile>some ICC profile</r:iccProfile>
            <!-- realná velikost obrázků (něktěrého obrázku) v pixelech -->
            <r:pictureSize>
                <r:width>600</r:width>
                <r:height>1000</r:height>
            </r:pictureSize>
        </r:technicalMetadata>
    </r:digitalDocument>
</r:import>
